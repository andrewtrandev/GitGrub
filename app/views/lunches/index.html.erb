<h1 class="heroheader">Lunch Listings</h1>

<div class="hero">
<%= image_tag "hero.jpg", alt: "group toast"%>
</div>

<% @lunch.each do |lunch| %>
    <%# note that @lunch is actually Lunch.all%>
    <%# so for each object of lunch, print name,price,description%>
    <div class="lunchbox">
   
        <%= form_with model: lunch, local: true, method: "delete" do |form| %>
        <%= link_to "edit", edit_lunch_path(lunch.id)%>
        <%= submit_tag "delete"%>
        <%end%>
        
        <%# make a link on lunch.name, that links to show method with specified id pulled from current object%>
        <p> <%= link_to lunch.name, lunch_path(lunch.id) %> - $<%=lunch.price %></p>
        <%= lunch.description %>
    </div>
<% end %>
<div class="lunchbox">
    <%= link_to "new lunch item", lunch_new_path %>
</div>


